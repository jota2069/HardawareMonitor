<Window x:Class="HardawareMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HardawareMonitor.ViewModels"
        mc:Ignorable="d"
        Title="Hardware Monitor" Height="600" Width="800">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка обновления -->
        <Button Content="Обновить" Width="100" Height="30" 
                HorizontalAlignment="Left" 
                Command="{Binding RefreshCommand}" />

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <!-- CPU -->
            <TabItem Header="Процессор">
                <StackPanel Margin="10">
                    <TextBlock Text="Название:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.Name}" Margin="0,0,0,10"/>

                    <TextBlock Text="Производитель:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.Manufacturer}" Margin="0,0,0,10"/>

                    <TextBlock Text="Архитектура:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.Architecture}" Margin="0,0,0,10"/>

                    <TextBlock Text="Ядер:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.CoreCount}" Margin="0,0,0,10"/>

                    <TextBlock Text="Потоков:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.ThreadCount}" Margin="0,0,0,10"/>

                    <TextBlock Text="Базовая частота (МГц):" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.BaseFrequency}" Margin="0,0,0,10"/>

                    <TextBlock Text="Загрузка CPU (%):" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CpuInfo.LoadPercentage}" Margin="0,0,0,10"/>
                </StackPanel>
            </TabItem>

            <!-- Память -->
            <TabItem Header="Память">
                <StackPanel Margin="10">
                    <TextBlock Text="Общий объём памяти (МБ):" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MemoryInfo.TotalMemoryBytes, Converter={StaticResource BytesToMBConverter}}" Margin="0,0,0,10"/>

                    <TextBlock Text="Доступная память (МБ):" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MemoryInfo.AvailableMemoryBytes, Converter={StaticResource BytesToMBConverter}}" Margin="0,0,0,10"/>

                    <TextBlock Text="Использовано (%):" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MemoryInfo.UsagePercentage}" Margin="0,0,0,10"/>

                    <TextBlock Text="Модули памяти:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ItemsControl ItemsSource="{Binding MemoryInfo.Modules}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Manufacturer}" Width="150"/>
                                    <TextBlock Text="{Binding CapacityBytes, Converter={StaticResource BytesToMBConverter}}" Width="100"/>
                                    <TextBlock Text="{Binding SpeedMHz}" Width="80"/>
                                    <TextBlock Text="МГц"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </TabItem>

            <!-- Диски -->
            <TabItem Header="Диски">
                <StackPanel Margin="10">
                    <TextBlock Text="Физические диски:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ItemsControl ItemsSource="{Binding DiskInfo.PhysicalDisks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Model}" Width="200"/>
                                    <TextBlock Text="{Binding Size, Converter={StaticResource BytesToGBConverter}}" Width="100"/>
                                    <TextBlock Text="{Binding MediaType}" Width="100"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="Логические диски:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ItemsControl ItemsSource="{Binding DiskInfo.LogicalDisks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding DriveLetter}" Width="50"/>
                                    <TextBlock Text="{Binding TotalSizeBytes, Converter={StaticResource BytesToGBConverter}}" Width="100"/>
                                    <TextBlock Text="{Binding FreeSizeBytes, Converter={StaticResource BytesToGBConverter}}" Width="100"/>
                                    <TextBlock Text="{Binding UsagePercent}" Width="80"/>
                                    <TextBlock Text="%" />
                                    <TextBlock Text="{Binding FileSystem}" Width="80"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </TabItem>
            <TabItem Header="Процессы">
                <DataGrid ItemsSource="{Binding Processes}" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Состояние" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="CPU (%)" Binding="{Binding CpuUsage}" Width="80"/>
                        <DataGridTextColumn Header="Память (МБ)" Binding="{Binding MemoryBytes, Converter={StaticResource BytesToMBConverter}}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
